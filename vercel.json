{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/auth.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/products.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/orders.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/images.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/upload.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/seed.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/products/(.*)",
      "destination": "/api/products.js"
    },
    {
      "source": "/api/products",
      "destination": "/api/products.js"
    },
    {
      "source": "/api/orders/(.*)",
      "destination": "/api/orders.js"
    },
    {
      "source": "/api/orders",
      "destination": "/api/orders.js"
    },
    {
      "source": "/api/images/(.*)",
      "destination": "/api/images.js"
    },
    {
      "source": "/api/upload",
      "destination": "/api/upload.js"
    },
    {
      "source": "/api/seed",
      "destination": "/api/seed.js"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
